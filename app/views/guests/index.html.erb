<div class="row mb-5">
  <div class="col-sm-6">
    <h1>Guests</h1>
  </div>

  <% if user_signed_in? %>
    <div class="col-sm-6 text-end">
      <%= link_to new_guest_path, class: 'btn btn-primary' do %>
        Add New Guest
      <% end %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-12 mb-3">
    <%= search_form_for @q do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, placeholder: "Search your name", class: 'form-control', autofocus: true %>
        <%= link_to "Clear", request.path, class: "btn btn-secondary" %>
        <%= f.submit class: 'btn btn-primary form-inline' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Table</th>
        </tr>
        </thead>

        <tbody>
        <% @guests.each do |guest| %>
          <%= content_tag :tr, id: dom_id(guest), class: dom_class(guest) do %>
            <td><%= link_to guest.full_name, guest %></td>
            <td><%= link_to guest.table.number, guest.table %></td>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
