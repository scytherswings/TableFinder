<div class="row">
  <div class="col-sm-6">
    <h1>Guests</h1>
  </div>

  <% if user_signed_in? %>
    <div class="col-sm-6 text-end">
      <%= link_to new_guest_path, class: 'btn btn-primary' do %>
        Add New Guest
      <% end %>
    </div>
  <% end %>

  <%= search_form_for @q do |f| %>

    <%= f.label :name %>
    <%= f.search_field :name %>

    <%= f.submit %>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Table</th>
    </tr>
    </thead>

    <tbody>
    <% @guests.each do |guest| %>
      <%= content_tag :tr, id: dom_id(guest), class: dom_class(guest) do %>
        <td><%= link_to guest.full_name, guest %></td>
        <td><%= link_to guest.table.number, guest.table %></td>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
