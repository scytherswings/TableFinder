<div class="row">
  <div class="col-sm-6">
    <h1>Guests</h1>
  </div>

  <% if user_signed_in? %>
    <div class="col-sm-6 text-end">
      <%= link_to new_guest_path, class: 'btn btn-primary' do %>
        Add New Guest
      <% end %>
    </div>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>

      <th>Name</th>


      <th>Title</th>
      <th>Email</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Post code</th>
      <th>Table</th>

    </tr>
    </thead>

    <tbody>
    <% @guests.each do |guest| %>
      <%= content_tag :tr, id: dom_id(guest), class: dom_class(guest) do %>

        <td><%= link_to guest.name, guest %></td>


        <td><%= guest.title %></td>
        <td><%= guest.email %></td>
        <td><%= guest.address_1 %></td>
        <td><%= guest.address_2 %></td>
        <td><%= guest.city %></td>
        <td><%= guest.state %></td>
        <td><%= guest.post_code %></td>
        <td><%= guest.table %></td>


      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
