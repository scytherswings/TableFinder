<%= form_with(model: table) do |form| %>
  <% if table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(table.errors.count, "error") %> prohibited this table from being saved:</h2>

      <ul>
        <% table.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :number, class: 'form-label' %>
    <%= form.number_field :number, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <% if table.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', table, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } if user_signed_in?  %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if table.persisted? %>
      <%= link_to "Cancel", table, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", tables_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
